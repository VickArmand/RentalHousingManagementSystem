<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtrental"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/rental_name"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_below="@+id/txtrental"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/number_of_rooms"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp">
        <TextView
            android:id="@+id/rental_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/shalom_house">
        </TextView>
        <TextView
            android:id="@+id/num_rooms"
            android:layout_below="@+id/rental_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/_10">
        </TextView>
    </RelativeLayout>
    <ImageView
        android:id="@+id/btnupdate"
        android:layout_width="50dp"
        android:layout_marginHorizontal="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/updatebtn">
    </ImageView>
    <ImageView
        android:id="@+id/btndelete"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/deletebtn">
    </ImageView>
</LinearLayout>
</androidx.cardview.widget.CardView>