<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".rentalUpdate">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewFname"
            android:layout_width="127dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-124dp"
            android:layout_marginBottom="38dp"
            android:layout_toStartOf="@+id/txtfname"
            android:text="First Name"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/txtfname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="-2dp"
            android:ems="10"
            android:inputType="number" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewlname"
            android:layout_width="127dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-124dp"
            android:layout_marginBottom="28dp"
            android:layout_toStartOf="@+id/txtlname"
            android:text="Last Name"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/txtlname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="-2dp"
            android:ems="10"
            android:inputType="number" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-13dp"
            android:layout_marginBottom="40dp"
            android:text="Room"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <Spinner
            android:id="@+id/txtroom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:inputType="text" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewgender"
            android:layout_width="101dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-13dp"
            android:layout_marginBottom="26dp"
            android:text="Gender"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <Spinner
            android:id="@+id/txtgender"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:inputType="text" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="127dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-124dp"
            android:layout_marginBottom="28dp"
            android:layout_toStartOf="@+id/txtnationalID"
            android:text="National ID"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/txtnationalID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="-2dp"
            android:ems="10"
            android:inputType="number" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="101dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-13dp"
            android:layout_marginBottom="26dp"
            android:text="Email"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:inputType="textEmailAddress" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="101dp"
            android:layout_height="31dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-13dp"
            android:layout_marginBottom="26dp"
            android:text="Contact"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/txtcontact"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:inputType="phone" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="141dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-13dp"
            android:layout_marginBottom="27dp"
            android:text="Emergency Contact"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/txtecontact"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:inputType="phone" />
    </RelativeLayout>
</LinearLayout>