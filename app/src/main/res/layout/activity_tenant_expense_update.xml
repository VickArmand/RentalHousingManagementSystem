<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="30dp"
    tools:context=".rentalUpdate">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginBottom="30dp"
            android:text="Category"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <Spinner
            android:id="@+id/txtcategory"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:inputType="text" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="127dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-120dp"
            android:layout_marginBottom="40dp"
            android:layout_toStartOf="@+id/txtfrequency"
            android:text="Frequency"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <Spinner
            android:id="@+id/txtfrequency"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="-2dp"
            android:ems="10"
            android:inputType="number" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="127dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-124dp"
            android:layout_marginBottom="35dp"
            android:layout_toStartOf="@+id/txtpayer"
            android:text="Payer"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <Spinner
            android:id="@+id/txtpayer"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="-2dp"
            android:ems="10" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="127dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-124dp"
            android:layout_marginBottom="58dp"
            android:layout_toStartOf="@+id/tenant"
            android:text="Tenant"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <Spinner
            android:id="@+id/tenant"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="-2dp"
            android:ems="10" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="127dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-124dp"
            android:layout_marginBottom="35dp"
            android:layout_toStartOf="@+id/txtcost"
            android:text="Cost"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/txtcost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="-2dp"
            android:ems="10"
            android:inputType="number" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="127dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-124dp"
            android:layout_marginBottom="30dp"
            android:layout_toStartOf="@+id/txtdescription"
            android:text="Description"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/txtdescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="-2dp"
            android:ems="10"
            android:inputType="textLongMessage" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="130dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-128dp"
            android:layout_marginBottom="35dp"
            android:layout_toStartOf="@+id/txtdeadline"
            android:text="Deadline"
            android:textColor="@color/navy_blue"
            android:textStyle="bold">

        </TextView>

        <DatePicker
            android:id="@+id/txtdeadline"
            android:layout_width="230dp"
            android:layout_height="49dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-2dp"
            android:ems="10" />
    </RelativeLayout>
</LinearLayout>